{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "body-max-line-length": [
            0,
            "always",
            100
        ],
        "footer-max-line-length": [
            0,
            "always",
            100
        ],
        "type-enum": [
            0,
            "always",
            [
                "build",
                "chore",
                "ci",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "release",
                "revert",
                "style",
                "test"
            ]
        ],
        "scope-case": [
            0,
            "always",
            [
                "lower-case",
                "pascal-case"
            ]
        ]
    }
}
